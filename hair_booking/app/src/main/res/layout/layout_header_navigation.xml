<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="AuthRepository"
            type="com.example.hair_booking.services.auth.AuthRepository" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:orientation="vertical"
        android:padding="20dp"
        android:gravity="bottom"
        android:id="@+id/header"
        android:background="@color/theme_secondary">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/nameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:text="@{AuthRepository.currentUser.displayName.toString()}"/>

        <TextView
            android:id="@+id/gmailTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@{AuthRepository.currentUser.email.toString()}"
            android:textSize="14sp" />

    </LinearLayout>
</layout>
