<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="appointment"
            type="com.example.hair_booking.model.Appointment" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/appointmentSubId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:text="TextView"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/customerNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/customer_name_label"
            app:layout_constraintStart_toStartOf="@+id/appointmentSubId"
            app:layout_constraintTop_toBottomOf="@+id/appointmentSubId" />

        <TextView
            android:id="@+id/customerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@{appointment.userFullName}"
            app:layout_constraintBottom_toBottomOf="@+id/customerNameLabel"
            app:layout_constraintStart_toEndOf="@+id/customerNameLabel"
            app:layout_constraintTop_toTopOf="@+id/customerNameLabel" />

        <TextView
            android:id="@+id/stylistNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:text="@string/stylist_name_label"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/customerNameLabel"
            app:layout_constraintTop_toBottomOf="@+id/customerNameLabel" />

        <TextView
            android:id="@+id/appointmentListStylistName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:text="@{appointment.stylistFullName}"
            app:layout_constraintBottom_toBottomOf="@+id/stylistNameLabel"
            app:layout_constraintStart_toEndOf="@+id/stylistNameLabel"
            app:layout_constraintTop_toTopOf="@+id/stylistNameLabel" />

        <TextView
            android:id="@+id/appointmentListBookingDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:text="@{appointment.bookingDate}"
            app:layout_constraintBottom_toBottomOf="@+id/appointmentSubId"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@+id/appointmentSubId" />

        <TextView
            android:id="@+id/appointmentListStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@{appointment.status}"
            app:layout_constraintBottom_toBottomOf="@+id/appointmentListStylistName"
            app:layout_constraintEnd_toEndOf="@+id/appointmentListBookingDate"
            app:layout_constraintTop_toTopOf="@+id/appointmentListStylistName" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>